<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mini WhatsApp</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="chat-container">
    <h1>Mini WhatsApp</h1>
    <form action="/chats/new" method="get">
      <button>Create New Chat</button>
    </form>
    <br>
    <div class="chat-box">
   
   <% chats.forEach(chat => { %>
  <div class="chat-controls">
    <form method="GET" action="/chats/<%= chat._id %>/edit">
      <button>Edit</button>
    </form>
    <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
      <button class="delete-btn">Delete</button>
    </form>
  </div>
  <div class="chat-message <%= chat.from === 'neha' ? 'sent' : 'received' %>">
    <div class="message-meta">
      <strong><%= chat.from %> â†’ <%= chat.to %></strong>
      <span class="timestamp"><%= chat.created_at.toLocaleString() %></span>
    </div>
    <div class="message-text"><%= chat.msg %></div>
  </div>
<% }) %>

    </div>
  </div>
</body>
</html>
